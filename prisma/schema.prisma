generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  imageUrl    String?
  minPrice    Int?
  maxPrice    Int?
  description String?
  tags        String?
  category    String?
}

model Diary {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  minPrice    Int?
  maxPrice    Int?
  imageUrl    String
  category    String
  tags        String?
  color       String?
  size        String?
  pages       Int?
  coverType   String?
}
